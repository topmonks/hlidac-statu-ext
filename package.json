  "devDependencies": {
    "prettier": "^2.1.2",
    "web-ext": "^5.1.0"
  },
  "scripts": {
    "build": "web-ext build --source-dir ./extension/ --artifacts-dir ./dist --overwrite-dest",
    "lint": "web-ext lint --source-dir ./extension/ -o text",
    "start:firefox": "web-ext run --source-dir ./extension/ --browser-console ",
    "start:chrome": "web-ext run --source-dir ./extension/ --target=chromium"
  }
}
